{
  "name": "dnt-boilerplate",
  "version": "1.0.0",
  "description": "Biolerplate for a Docker, Node and TypeScript based application",
  "keywords": [
    "Docker",
    "Node",
    "TypeScript"
  ],
  "scripts": {
    "lint": "./node_modules/.bin/tsc --noEmit && ./node_modules/.bin/eslint '*/**/*.{js,ts}' --quiet --fix",
    "test": "NODE_ENV=test ./node_modules/.bin/jest",
    "test:watch": "npm test -- --watch",
    "development": "NODE_ENV=development ./node_modules/.bin/webpack --progress --hide-modules --config webpack.dev.js",
    "dev": "npm run development",
    "watch": "NODE_ENV=development ./node_modules/.bin/webpack --watch --progress --hide-modules --config webpack.dev.js",
    "production": "NODE_ENV=production ./node_modules/.bin/webpack --progress --hide-modules --config webpack.prod.js",
    "prod": "npm run production",
    "serve": "NODE_ENV=production node ./dist/app.js",
    "clean": "rm -rf ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michaeldzjap/dnt-boilerplate.git"
  },
  "author": "Michael Dzjaparidze",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/michaeldzjap/dnt-boilerplate/issues"
  },
  "homepage": "https://github.com/michaeldzjap/dnt-boilerplate#readme",
  "devDependencies": {
    "@types/consolidate": "^0.14.0",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.9.0",
    "@types/node": "^13.1.8",
    "@types/nunjucks": "^3.1.3",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "copy-webpack-plugin": "^5.1.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.10",
    "jest": "^24.9.0",
    "lint-staged": "^10.0.0-beta.15",
    "nodemon-webpack-plugin": "^4.2.2",
    "prettier": "^1.19.1",
    "terser-webpack-plugin": "^2.3.2",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "consolidate": "^0.15.1",
    "express": "^4.17.1",
    "nunjucks": "^3.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged && npm test"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
