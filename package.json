{
  "name": "dnt-boilerplate",
  "version": "1.0.0",
  "description": "Biolerplate for a Docker, Node and TypeScript based application",
  "main": "index.js",
  "keywords": [
    "Docker",
    "Node",
    "TypeScript"
  ],
  "scripts": {
    "lint": "./node_modules/.bin/tsc --noEmit && ./node_modules/.bin/eslint '*/**/*.{js,ts}' --quiet --fix",
    "test": "NODE_ENV=test ./node_modules/.bin/jest",
    "test:watch": "npm test -- --watch",
    "development": "NODE_ENV=development ./node_modules/.bin/tsc --project ./tsconfig.dev.json",
    "dev": "npm run development",
    "watch": "NODE_ENV=development ./node_modules/.bin/npm-run-all --parallel watch:ts watch:js",
    "watch:ts": "./node_modules/.bin/tsc --project ./tsconfig.dev.json --watch",
    "watch:js": "./node_modules/.bin/nodemon build/app.js",
    "production": "NODE_ENV=production ./node_modules/.bin/tsc",
    "prod": "npm run production",
    "clean": "rm -rf ./dist",
    "serve": "NODE_ENV=production node ./dist/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michaeldzjap/dnt-boilerplate.git"
  },
  "author": "Michael Dzjaparidze",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/michaeldzjap/dnt-boilerplate/issues"
  },
  "homepage": "https://github.com/michaeldzjap/dnt-boilerplate#readme",
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "^24.9.0",
    "@types/node": "^13.1.8",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.10",
    "jest": "^24.9.0",
    "lint-staged": "^10.0.0-beta.15",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "ts-jest": "^24.3.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged && npm test"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
